<h1> Sign Up </h1>

<%= form_with model: @user, url:sign_up_path do |f|%>
    <div class="mb-3">
        <%= f.label :email, "Email" %>
        <%= f.email_field :email, class: 'form-control', placeholder: "JohnDoe@Apple.com" %>
    </div>
    <div class="mb-3">
        <%= f.label :password, "Password" %>
        <%= f.password_field :password, class: 'form-control', placeholder: "Choose a Password" %>
    </div>
    <div class="mb-3">
        <%= f.label :password_confirmation, "password_confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Repeat your Password" %>
    </div>
    <div>
        <%= f.submit "Sign Up" %>
    </div>  
<% end %>
